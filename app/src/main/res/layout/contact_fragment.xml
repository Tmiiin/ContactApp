<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_fragment"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center_horizontal"
        android:text="@string/contact_hint"
        android:textSize="24sp" />
    <Button
        android:id="@+id/download_to_imgur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#FFF6"
        android:visibility="gone"
        android:textColor="@color/colorAccent"
        android:textStyle="italic|bold"

        android:text="@string/downloadToImgur"/>


    <EditText
        android:id="@+id/contact_input_number"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginHorizontal="68dp"
        android:hint="@string/contact_number_hint" />

    <Button
        android:id="@+id/contact_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/contact_button_find"
        android:layout_gravity="center_horizontal"
/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contact_container">

    </FrameLayout>
</LinearLayout>
</FrameLayout>